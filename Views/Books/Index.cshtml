@model IEnumerable<EndProj_Books.Models.Books>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Book</a>
    <a asp-action="AddByISBN" class="btn btn-secondary">Add Book by ISBN</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TitleSortParm">Title</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.AuthorSortParm">Author</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.CompleteSortParm">Complete</a>
            </th>
            <th>Genre</th>
            <th>Pages</th>
            <th>Publish Date</th>
            <th>ISBN</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Author)</td>
                <td>@Html.DisplayFor(modelItem => item.Complete)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Pages)</td>
                <td>@Html.DisplayFor(modelItem => item.PublishDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
